source ~/devel/automow/setup.bash

alias rosenv='env | grep ROS'
alias roselectric='source /opt/ros/electric/setup.bash'
alias rviz='rosrun rviz rviz'
alias xacro='rosrun xacro xacro.py'
alias rosh='rosrun rosh rosh'


alias minimal='roslaunch automow_bringup minimal.launch'
alias lsapps='rosservice call /automow/list_apps'

alias ps3start='rosservice call /automow/start_app automow_teleop/ps3_teleop'
alias ps3stop='rosservice call /automow/stop_app automow_teleop/ps3_teleop'

alias oscstart='rosservice call /automow/start_app automow_teleop/osc_teleop'
alias oscstop='rosservice call /automow/stop_app automow_teleop/osc_teleop'

alias bladeson='rosservice call /cutters True True'
alias bladesoff='rosservice call /cutters False False'


rospython ()
{
    if [[ -z $1 ]]; then
        if [[ -f ./manifest.xml ]]; then
            pkgname=`basename \`pwd\``;
            ipython -i -c "import roslib; roslib.load_manifest('$pkgname')";
        else
            ipython;
        fi;
    else
        ipython -i -c "import roslib; roslib.load_manifest('$1')";
    fi
}
